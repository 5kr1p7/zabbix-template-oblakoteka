<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2021-12-01T10:55:24Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Oblakoteka</template>
            <name>Облакотека</name>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Облакотека</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Дата блокировки (прогноз, дата)</name>
                    <type>DEPENDENT</type>
                    <key>date.block</key>
                    <delay>0</delay>
                    <trends>0</trends>
                    <value_type>CHAR</value_type>
                    <applications>
                        <application>
                            <name>Облакотека</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JAVASCRIPT</type>
                            <params>return new Date(parseInt(value)).toString().substring(0,19);</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>oblakoteka.sh[&quot;{$OBLAKOTEKA_USERNAME}&quot;,&quot;{$OBLAKOTEKA_PASSWORD}&quot;,blockdate]</key>
                    </master_item>
                </item>
                <item>
                    <name>Баланс</name>
                    <type>EXTERNAL</type>
                    <key>oblakoteka.sh[&quot;{$OBLAKOTEKA_USERNAME}&quot;,&quot;{$OBLAKOTEKA_PASSWORD}&quot;,balance]</key>
                    <delay>1h</delay>
                    <history>1d</history>
                    <value_type>FLOAT</value_type>
                    <units>!руб.</units>
                    <applications>
                        <application>
                            <name>Облакотека</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last()}&lt;={$OBLAKOTEKA_LOW}</expression>
                            <name>Низкий баланс счёта Oblakoteka ({$OBLAKOTEKA_USERNAME})</name>
                            <priority>HIGH</priority>
                            <manual_close>YES</manual_close>
                            <tags>
                                <tag>
                                    <tag>type</tag>
                                    <value>PAYMENT</value>
                                </tag>
                            </tags>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Дата блокировки (прогноз)</name>
                    <type>EXTERNAL</type>
                    <key>oblakoteka.sh[&quot;{$OBLAKOTEKA_USERNAME}&quot;,&quot;{$OBLAKOTEKA_PASSWORD}&quot;,blockdate]</key>
                    <history>0</history>
                    <applications>
                        <application>
                            <name>Облакотека</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{fuzzytime({$OBLAKOTEKA_SECONDS_MIN})}=1</expression>
                            <name>Приближается время блокировки Oblakoteka ({$OBLAKOTEKA_USERNAME})</name>
                            <priority>HIGH</priority>
                            <manual_close>YES</manual_close>
                            <tags>
                                <tag>
                                    <tag>type</tag>
                                    <value>PAYMENT</value>
                                </tag>
                            </tags>
                        </trigger>
                    </triggers>
                </item>
            </items>
            <macros>
                <macro>
                    <macro>{$OBLAKOTEKA_LOW}</macro>
                    <value>-1000</value>
                    <description>Порог баланса</description>
                </macro>
                <macro>
                    <macro>{$OBLAKOTEKA_PASSWORD}</macro>
                    <type>SECRET_TEXT</type>
                    <description>Пароль</description>
                </macro>
                <macro>
                    <macro>{$OBLAKOTEKA_SECONDS_MIN}</macro>
                    <value>259200</value>
                    <description>Минимальное количество секунд в предполагаемой дате блокировки</description>
                </macro>
                <macro>
                    <macro>{$OBLAKOTEKA_USERNAME}</macro>
                    <value></value>
                    <description>Имя пользователя</description>
                </macro>
            </macros>
        </template>
    </templates>
</zabbix_export>
